<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:elevation="16dp"
    app:cardCornerRadius="16dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_background"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="#40d7cb"
            app:cardCornerRadius="16dp">


            <ImageView
                android:id="@+id/img_item_courses"
                android:layout_width="42dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_height="42dp"/>
        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/cardview_background"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:text="Property For Rent"
                android:fontFamily="@font/poppins_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/lightGtay"
                android:text="Browse from the wide range of listings in your area"
                android:fontFamily="@font/poppins_light"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>